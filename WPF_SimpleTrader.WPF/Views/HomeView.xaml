<UserControl
    x:Class="WPF_SimpleTrader.WPF.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="clr-namespace:WPF_SimpleTrader.WPF.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_SimpleTrader.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ctl:AssetSummary
            Grid.Row="0"
            Margin="0,0,0,50"
            DataContext="{Binding AssetSummaryViewModel}" />

        <ctl:MajorIndexCardList
            Grid.Row="1"
            Margin="0,10"
            DataContext="{Binding MajorindexVM}" />
    </Grid>
</UserControl>